<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Home Screen -->
    <style name="egypt_text">
        <item name="android:drawableRight">@drawable/ic_location_on_black_24dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:text">@string/egypt_text_in_home_screen</item>
        <item name="android:padding">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableEnd">@drawable/ic_location_on_black_24dp</item>
    </style>

    <style name="egypt_description">
        <item name="android:padding">16dp</item>
        <item name="android:text">@string/egypt_description_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/egypt_description_color</item>
    </style>

    <!-- List Item -->
    <style name="text_in_list_item">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">36sp</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>
